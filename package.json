{
  "name": "google_drive",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
   "dev": "ts-node-dev --loader ts-node/esm --files backend/src/app.ts",

    "start": "npx nodemon backend/dist/app.js",
    "build:backend": "tsc --watch -p backend/backendconfig.json",
    "build:frontend": "tsc --watch -p frontend/frontendconfig.json",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "css": "npx tailwindcss -i ./public/index.css -o ./public/output.css --watch"
  },
  "dependencies": {
    "@types/multer": "^1.4.12",
    "axios": "^1.8.3",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.10.0",
    "multer": "^1.4.5-lts.1",
    "resend": "^4.1.2",
    "ts-node-dev": "^2.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.10",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.2"
  }
}
