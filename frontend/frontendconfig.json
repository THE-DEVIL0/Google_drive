{
    "compilerOptions": {
      "target": "ES6",                          
      "module": "ESNext",                       
      "rootDir": "./src",                       
      "outDir": "./dist",                       
      "strict": true,                           
      "esModuleInterop": true,                  
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",                       
      "paths": {
        "*": ["*"]
      }
    },
    "include": ["src/**/*"]
  }
  