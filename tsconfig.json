{
  "compilerOptions": {
    "target": "ES6",                         // Specifies the target ECMAScript version.
    "module": "ESNext",                      // Use ES Modules.
    "moduleResolution": "node",              // Resolve modules using Node.js resolution logic.
    "outDir": "./dist",                      // Output directory for compiled files.
    "rootDir": "./src",                      // The root directory of the source files.
    "strict": true,                          // Enable strict type-checking options.
    "esModuleInterop": true,                 // Enables compatibility with CommonJS modules.
    "skipLibCheck": true,                    // Skip type checking of declaration files.
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming.
    "resolveJsonModule": true,               // Allow importing JSON files.
    "lib": ["ESNext"],                       // Include the latest ECMAScript features.
    "allowJs": true                          // Allow JavaScript files to be compiled.
  },
  "include": ["src/app.ts"],  // Include all TypeScript and JavaScript files in src.
  "exclude": ["node_modules", "dist"]         // Exclude node_modules and dist folders.
}
